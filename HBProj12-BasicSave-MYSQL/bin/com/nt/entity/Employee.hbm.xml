<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  <hibernate-mapping>
     <class name="com.nt.entity.Employee"  table="EMPLOYEE">
        <!-- Singular ID field cfg -->
        <id name="eno"  column="EID" length="6" type="int"/>
         
        <!-- other properties cfg -->
        <property name="ename"  column="ENAME" length="15" type="string" not-null="true" />
        <property name="desg"  column="DESG" length="15" type="string"/>
        <property name="salary" column="SALARY" length="10" type="float"/>
     </class>
  </hibernate-mapping>        